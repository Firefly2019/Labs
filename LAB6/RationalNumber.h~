#ifndef RATIONALNUMBER_H
#define RATIONALNUMBER_H

class RationalNumber
{
  friend RationalNumber operator<< (RationalNumber &n1, RationalNumber &n2);
 friend RationalNumber operator++ (RationalNumber &n1, int n);
 friend RationalNumber operator>> (RationalNumber &n1, RationalNumber &n2);



 private:
  int numerator;
  int denominator; 




 public:
  
  RationalNumber();
  RationalNumber(int &a, int &b);
  RationalNumber operator-(RationalNumber &n);
  int getNumerator();
  int getDenominator();
  void setNumerator(int numerator);
  void setDenominator(int denominator);











};

#endif
