#include<iostream>
#include<string>

using namespace std;


void print();
double yearlySum(double[]);


int main(){

  int size;
  double sales;

  cout<<"Enter the number of monthly sales to be input: ";
  cin>>size;

  if(size<0){
    return 1;
  }

  double* monthlySales= new double [size];

  for(int i = 0; i < size; i++){
    cout<<"Enter the monthly sales for month "<<i<<": "<<endl;
    cin>>sales;
    monthlySales[i]= sales;
  }



  delete monthlySales;
}




void print(){

  for(int i=0; i<size; i++){
    cout<< 
  }

}



double yearlySum(double[]){

  double sum;

  for(int i=0; i < size; i++){
    sum += double[i];
  }
  return sum;
}
